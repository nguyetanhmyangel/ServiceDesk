                <%--<div class="sidebar-header-wrapper">
                    <input type="text" class="searchinput"/>
                    <i class="searchicon fa fa-search"></i>
                    <div class="searchhelper"></div>
                </div>--%>
                <!-- /Page Sidebar Header -->
                <!-- Sidebar Menu -->
                <uc1:PageSidebar runat="server" id="PageSidebar"/>
                <!-- /Sidebar Menu -->
            </div>
            <!-- /Page Sidebar -->
            <!-- Page Content -->
            <div class="page-content">
